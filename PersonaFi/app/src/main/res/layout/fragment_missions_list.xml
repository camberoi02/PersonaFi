<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.personafi.AnimatedShapesView
        android:id="@+id/animatedShapesView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Mission"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/on_surface"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dailyMissionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/outline"
                android:backgroundTint="@color/surface"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/dailyMissionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/on_surface"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/dailyMissionDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/on_surface_variant"/>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/dailyMissionProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:trackCornerRadius="8dp"
                        app:trackThickness="8dp"
                        app:indicatorColor="@color/primary"
                        app:trackColor="@color/surface_variant"/>

                    <TextView
                        android:id="@+id/dailyMissionReward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/primary"
                        android:textStyle="bold"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Mission"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/on_surface"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/weeklyMissionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/outline"
                android:backgroundTint="@color/surface"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/weeklyMissionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/on_surface"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/weeklyMissionDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/on_surface_variant"/>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/weeklyMissionProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:trackCornerRadius="8dp"
                        app:trackThickness="8dp"
                        app:indicatorColor="@color/primary"
                        app:trackColor="@color/surface_variant"/>

                    <TextView
                        android:id="@+id/weeklyMissionReward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/primary"
                        android:textStyle="bold"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout> 