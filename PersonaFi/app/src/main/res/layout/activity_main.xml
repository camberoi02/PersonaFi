<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Financial Summary Section (Visible only in Home) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="68dp"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Home content - leaving for compatibility with MainActivity.java -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dashboard Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/spacing_small"
                app:strokeWidth="0dp">

                <!-- Financial Summary Header with Gradient Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header Section with Gradient Background -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_primary"
                        android:paddingHorizontal="@dimen/spacing_medium"
                        android:paddingVertical="@dimen/spacing_large">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_large"
                                android:layout_height="@dimen/icon_size_large"
                                android:src="@drawable/ic_peso"
                                android:tint="@color/white"
                                android:contentDescription="Money icon" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/spacing_medium">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Financial Summary"
                                    android:textSize="@dimen/text_size_title"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Track your finances with PersoniFi"
                                    android:textColor="@color/white"
                                    android:alpha="0.8"
                                    android:textSize="@dimen/text_size_body" />
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>

                    <!-- Balance Overview -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/card_background"
                        android:padding="@dimen/spacing_medium">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Current Balance"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_subheading" />

                                <TextView
                                    android:id="@+id/text_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â‚±0.00"
                                    android:textSize="@dimen/text_size_display"
                                    android:textStyle="bold"
                                    android:letterSpacing="-0.02" />
                            </LinearLayout>

                            <!-- Add a visual indicator of balance health -->
                            <ImageView
                                android:id="@+id/image_balance_indicator"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_peso"
                                android:tint="@color/income"
                                android:background="@drawable/circle_background"
                                android:padding="8dp"
                                android:contentDescription="Balance health indicator" />
                        </LinearLayout>

                        <!-- Add a progress bar to visually show spending vs. income -->
                        <ProgressBar
                            android:id="@+id/progress_spending"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:progress="50"
                            android:progressTint="@color/income"
                            android:progressBackgroundTint="@color/expense_light"
                            android:max="100" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Income vs. Expenses"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_caption"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/spacing_tiny" />
                    </LinearLayout>

                    <!-- Income and Expenses Breakdown -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/card_background"
                        android:padding="@dimen/spacing_medium">

                        <!-- Income Section -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_small"
                            app:cardCornerRadius="@dimen/card_corner_radius"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="@color/income_light">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/spacing_medium">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Income"
                                    android:drawableStart="@drawable/ic_peso"
                                    android:drawableTint="@color/income"
                                    android:drawablePadding="@dimen/spacing_small"
                                    android:gravity="center_vertical"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_subheading" />

                                <TextView
                                    android:id="@+id/text_total_income"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="â‚±0.00"
                                    android:textColor="@color/income"
                                    android:textSize="@dimen/text_size_heading"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/spacing_small" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Expenses Section -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_small"
                            app:cardCornerRadius="@dimen/card_corner_radius"
                            app:cardElevation="1dp"
                            app:cardBackgroundColor="@color/expense_light">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/spacing_medium">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Expenses"
                                    android:drawableStart="@drawable/ic_peso"
                                    android:drawableTint="@color/expense"
                                    android:drawablePadding="@dimen/spacing_small"
                                    android:gravity="center_vertical"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_subheading" />

                                <TextView
                                    android:id="@+id/text_total_expenses"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="â‚±0.00"
                                    android:textColor="@color/expense"
                                    android:textSize="@dimen/text_size_heading"
                                    android:textStyle="bold"
                                    android:layout_marginTop="@dimen/spacing_small" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recent Transactions Section -->
            <TextView
                android:id="@+id/text_recent_transactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="Recent Transactions"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <!-- Placeholder for fragment_home RecyclerView -->
            <FrameLayout
                android:id="@+id/transactions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp" />

            <!-- Legacy views hidden with zero size for compatibility with MainActivity.java -->
            <LinearLayout
                android:id="@+id/legacy_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:visibility="gone">
                
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_transactions"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />
                
                <LinearLayout
                    android:id="@+id/empty_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Fragment Container (Main Content Area) -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="68dp"
        android:visibility="gone" />

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="bottom"
        android:background="@drawable/nav_background"
        android:visibility="visible"
        android:elevation="4dp"
        app:elevation="4dp"
        app:itemIconSize="24dp"
        app:itemIconPadding="12dp"
        app:itemTextAppearanceActive="@style/BottomNavigationTextAppearance.Active"
        app:itemTextAppearanceInactive="@style/BottomNavigationTextAppearance"
        app:itemIconTint="@color/primary"
        app:itemTextColor="@color/primary"
        app:labelVisibilityMode="selected"
        app:menu="@menu/bottom_navigation_menu" />

    <!-- Floating action button for adding transactions -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="84dp"
        android:contentDescription="Add a new transaction"
        app:tint="@color/white"
        app:backgroundTint="@color/primary"
        app:srcCompat="@android:drawable/ic_input_add" />

    <!-- Center Add Goal FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_goal"
        style="@style/Fab.NavCenter"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="12dp"
        android:contentDescription="Add Goal"
        android:foreground="@drawable/ripple_overlay"
        android:stateListAnimator="@animator/fab_press_animation"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_add_goal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>