<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Animated Shapes Background -->
    <com.example.personifi.AnimatedShapesView
        android:id="@+id/animated_shapes_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:alpha="0.9" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="68dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Title with icon -->
            <LinearLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_peso"
                    android:tint="@color/primary"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Savings icon" />

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Savings Goals"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />
            </LinearLayout>

            <!-- Savings Overview Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_savings_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/layout_title">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="300dp"
                    android:maxHeight="350dp">

                    <!-- Background with floating shapes -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/floating_shapes_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_coin_stack"
                                android:tint="@android:color/white"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Overall Savings Progress"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />
                        </LinearLayout>

                        <!-- Circular Progress Container -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="-16dp">

                            <!-- Circular Progress View -->
                            <com.example.personifi.CircularProgressView
                                android:id="@+id/circular_progress_overall_savings"
                                android:layout_width="240dp"
                                android:layout_height="240dp"
                                android:layout_gravity="center"
                                app:progressColor="@android:color/white"
                                app:backgroundColor="#25FFFFFF"
                                app:strokeWidth="20dp"
                                app:progress="0" />

                            <!-- Text inside circle -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:id="@+id/text_overall_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0%"
                                    android:textSize="60sp"
                                    android:textStyle="bold"
                                    android:letterSpacing="0.03"
                                    android:shadowColor="#50000000"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="2"
                                    android:textColor="@android:color/white" />

                                <TextView
                                    android:id="@+id/text_overall_progress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₱0 / ₱0"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-light"
                                    android:alpha="0.95"
                                    android:layout_marginTop="-8dp"
                                    android:singleLine="false"
                                    android:gravity="center"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>
                        </FrameLayout>

                        <!-- Summary Stats -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="2dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="2dp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:clipToPadding="false"
                            android:orientation="horizontal">

                            <!-- Active Goals -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="62dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:background="@drawable/rounded_stat_background"
                                android:elevation="4dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/text_active_goals_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Active Goals"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>

                            <!-- Achieved Goals -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="62dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/rounded_stat_background"
                                android:layout_marginHorizontal="6dp"
                                android:layout_marginBottom="2dp"
                                android:elevation="4dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/text_achieved_goals_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Achieved"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>

                            <!-- Monthly Savings -->
                            <LinearLayout
                                android:id="@+id/layout_monthly_savings"
                                android:layout_width="0dp"
                                android:layout_height="62dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/rounded_stat_background"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginBottom="2dp"
                                android:elevation="4dp"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/text_monthly_savings"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₱0"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="This Month"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Goals List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_goals"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/card_savings_overview"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="bottom"
        android:background="@drawable/nav_background"
        android:visibility="visible"
        android:elevation="4dp"
        app:elevation="4dp"
        app:itemIconSize="24dp"
        app:itemIconPadding="12dp"
        app:itemTextAppearanceActive="@style/BottomNavigationTextAppearance.Active"
        app:itemTextAppearanceInactive="@style/BottomNavigationTextAppearance"
        app:itemIconTint="@color/primary"
        app:itemTextColor="@color/primary"
        app:labelVisibilityMode="selected"
        app:menu="@menu/bottom_navigation_menu" />

    <!-- Center Add Goal FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_goal"
        style="@style/Fab.NavCenter"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="12dp"
        android:contentDescription="Add Goal"
        android:foreground="@drawable/ripple_overlay"
        android:stateListAnimator="@animator/fab_press_animation"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_add_goal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>