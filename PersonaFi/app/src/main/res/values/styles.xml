<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Navigation Item Style -->
    <style name="Widget.PersonaFi.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">12dp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.PersonaFi.BottomNavigation.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.PersonaFi.BottomNavigation.Inactive</item>
    </style>

    <!-- Active Bottom Navigation Item Text Style -->
    <style name="TextAppearance.PersonaFi.BottomNavigation.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Inactive Bottom Navigation Item Text Style -->
    <style name="TextAppearance.PersonaFi.BottomNavigation.Inactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Active Indicator Style for Bottom Navigation -->
    <style name="App.ActiveIndicator.BottomNavigation" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_container</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
    </style>
</resources> 