<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger shadow (bottom) -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="5dp"
                android:left="3dp"
                android:right="3dp"
                android:top="1dp" />
            <solid android:color="#20000000" />
        </shape>
    </item>
    <!-- Medium shadow -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="3dp"
                android:left="2dp"
                android:right="2dp"
                android:top="0dp" />
            <solid android:color="#30000000" />
        </shape>
    </item>
    <!-- Inner (closer) shadow -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0dp" />
            <solid android:color="#50000000" />
        </shape>
    </item>
    <!-- Content -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/primary" />
        </shape>
    </item>
</layer-list> 